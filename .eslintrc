{
  "extends": "standard",
  "env": {
    "es6": true,
    "node": true
  },
  "rules": {
    "semi": [
      2,
      "always"
    ],
    "quotes": [
      "error",
      "double",
      {
        "allowTemplateLiterals": true
      }
    ],
    "no-trailing-spaces": [
      0,
      "off"
    ],
    "no-unused-vars": "warn",
    "unused": "vars"
  }
}
